<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/hap/res-auto"
    ohos:width="match_parent"
    ohos:height="match_parent">

    <io.feeeei.circleseekbar.CircleSeekBar
        ohos:id="$+id:progress"
        ohos:width="330vp"
        ohos:height="330vp"
        ohos:center_in_parent="true"
        ohos:padding="0vp"
        app:wheel_reached_width="30vp"
        app:wheel_unreached_width="34vp"
        app:wheel_pointer_radius="6vp"
        app:wheel_can_touch="false"
        app:wheel_max_process="100" />

    <Text
        ohos:id="$+id:textview"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:center_in_parent="true"
        ohos:text_size="34fp" />

    <Button
        ohos:id="$+id:btn"
        ohos:width="100vp"
        ohos:height="match_content"
        ohos:align_parent_bottom="true"
        ohos:horizontal_center="true"
        ohos:bottom_margin="16vp"
        ohos:text_size="32fp"
        ohos:padding="10vp"
        ohos:background_element="#C0C0C0"
        ohos:text="start" />
</DependentLayout>
