<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/hap/res-auto"
    ohos:width="match_parent"
    ohos:height="match_parent">

    <io.feeeei.circleseekbar.CircleSeekBar
        ohos:id="$+id:seek_minute"
        ohos:width="300vp"
        ohos:height="300vp"
        ohos:center_in_parent="true"
        app:wheel_max_process="59"
        app:wheel_unreached_width="32vp" />

    <!--     300-32-32 = 236   -->
    <io.feeeei.circleseekbar.CircleSeekBar
        ohos:id="$+id:seek_hour"
        ohos:width="236vp"
        ohos:height="236vp"
        ohos:center_in_parent="true"
        app:wheel_max_process="11"
        app:wheel_pointer_color="$color:colorPrimaryDark"
        app:wheel_pointer_radius="8vp"
        app:wheel_reached_color="$color:colorAccent"
        app:wheel_reached_width="32vp"
        app:wheel_unreached_color="$color:colorPrimary" />

    <Text
        ohos:id="$+id:textview"
        ohos:width="100vp"
        ohos:height="100vp"
        ohos:center_in_parent="true"
        ohos:text_size="32fp" />
</DependentLayout>